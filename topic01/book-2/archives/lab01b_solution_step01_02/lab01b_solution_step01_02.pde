//Setting up the display window and strokeWeight
size(400,300);
background(190,240,245); 
strokeWeight(3);

//fill the rectangles with dark green
fill(100,150,70);

//Drawing a rectangle
rect(100,100,200,100);

//Drawing a square
rect(150,200,20,20);

//Drawing a line
line(100,100,300,200);

//fill the ellipses with light green
fill(200,250,70);

//Drawing an ellipse
noStroke();
ellipse(200,100,20,60);

//Drawing an circle
stroke(0,0,0);
ellipse(250,130,25,25);